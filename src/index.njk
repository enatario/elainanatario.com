---
layout: layouts/base.njk
---

<header>
  <h1 class="u-hide-visually">{{ header.title }}</h1>
  <p>{{ header.intro | safe }}</p>
</header>

{% for section in content.section %}
<section>
  <h2>{{ section.title }}</h2>
  {% if section.aside %}<aside><p>{{ section.aside }}</p></aside>{% endif %}
  <ul>
  {% for item in section.dated_list|sort(attribute='date', reverse=true) %}
    <li>
      <time datetime="{{ item.date }}">{{ item.date }}</time>
      <a href="{{ item.url }}">{{ item.title }}</a>
    </li>
  {% endfor %}
  </ul>
</section>
{% endfor %}
