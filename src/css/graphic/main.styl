//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

$celedon = #D6E1C7
$teal = #45ADA8
$salmon = #FC9D9A
$steel = #547980
$eggshell = #FFFCF7
$text = #2D2C2A


gingham(width, color1, color2, color3, color4)
	box-shadow inset 0 width 0 0 rgba(color1, 0.5),
			   inset (-(width)) 0 0 rgba(color2, 0.5),
			   inset 0 (-(width)) 0 0 rgba(color3, 0.5),
			   inset width 0 0 rgba(color4, 0.5)


body
	min-height 100vh
	padding 1.5em
	overflow-x hidden
	background-color $eggshell
	// gingham(1em, $steel, $celedon, $steel, $celedon)


// Container
.container
	display flex
	justify-content center
	padding 0 1em


// Link List
.refer
	position relative
	
	+mq('bp-2')
		padding 0 10em
	
	&--subhed
		font($sans, $regular)
		font-size 0.8em
		color $text
		letter-spacing 0.05em
		line-height 1.5
		margin-bottom 1em
		text-transform uppercase
			
		&:before
			content '\1F389'
			display inline-block
			margin-right 0.5em
			animation bounce 1s infinite
			
		&:after
			content '\1F389'
			display inline-block
			margin-left 0.5em
			animation bounce 1s 0.5s infinite
	
	&--list
		list-style-type none
	
	&--item
		rhythm('base')
	
	&--link
		color $text
		font($sans, $bold)
		text-decoration none
		position relative
		padding-bottom 0.35em
		
		&:before
			content ''
			position absolute
			bottom 0
			right 0
			display block
			width 100%
			border-bottom 3px solid $celedon
			transition 0.7s ease all
		
		&:after
			@extends .refer--link:before
			border-bottom 3px solid $salmon
		
		&:hover
			&:before
				width 100%
			
			&:after
				width 0px

// Animation
@keyframes bounce
	0%
		transform translateY(0)
	50%
		transform translateY(-0.5em)
	100%
		transfom translateY(0)

// Notes
.note
	background-color rgba($salmon, 0.5)
	padding 0.25em 0.5em
	border-radius 3px
	transition $ease
	cursor pointer
	
	
	&:hover
		background-color rgba($salmon, 0.8)
	
	&--info
		color green
		transition $ease
		
		+mq('bp-2')
			position absolute
			left 0
			top 0
			max-width 9em

.hidden
	visibility hidden
	opacity 0
	transform translateX(2em)