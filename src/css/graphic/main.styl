//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

$celedon = #D6E1C7
$teal = #45ADA8
$salmon = #FC9D9A
$steel = #547980
$eggshell = #FFFCF7
$text = #2D2C2A


gingham(width, color1, color2, color3, color4)
	box-shadow inset 0 width 0 0 rgba(color1, 0.5),
			   inset (-(width)) 0 0 rgba(color2, 0.5),
			   inset 0 (-(width)) 0 0 rgba(color3, 0.5),
			   inset width 0 0 rgba(color4, 0.5)


body
	min-height 100vh
	padding 1.5em
	overflow-x hidden
	background-color $eggshell
	// gingham(1em, $steel, $celedon, $steel, $celedon)


// Container
.container
	width 100%
	margin 0 auto
	max-width 45em
	
	// +mq('bp-2')
	// 	max-width 50em


// Link List
.refer
	position relative
	
	+mq('bp-2')
		padding 0 12em
	
	&--subhed
		font($sans, $regular)
		font-size 0.8em
		color $text
		letter-spacing 0.05em
		line-height 1.5
		text-transform uppercase
		margin-bottom 1em
		padding-bottom 1em
		text-align center
		border-bottom 1px solid lighten($text, 75)
		
		+mq('bp-2')
			margin-bottom 2em
			
		&:before
			content '\1F389'
			display inline-block
			margin-right 0.5em
			animation bounce 1s infinite
			
		&:after
			content '\1F389'
			display inline-block
			margin-left 0.5em
			animation bounce 1s 0.5s infinite
	
	&--list
		list-style-type none
	
	&--item
		// rhythm('base')
		line-height 1.5
		margin-bottom 3em
	
	&--link
		color $text
		font($sans, $bold)
		text-decoration none
		position relative
		padding-bottom 0.35em
		font-size 1.2em
		
		&:before
			content ''
			position absolute
			bottom 0
			right 0
			display block
			width 100%
			border-bottom 3px solid $celedon
			transition 0.7s ease all
		
		&:after
			@extends .refer--link:before
			border-bottom 3px solid $salmon
		
		&:hover
			&:before
				width 100%
			
			&:after
				width 0px
	
	&--info
		margin-top 1em

// Animation
@keyframes bounce
	0%
		transform translateY(0)
	50%
		transform translateY(-0.5em)
	100%
		transfom translateY(0)

// Notes
.note
	background-color rgba($celedon, 0.85)
	padding 0.25em 0.5em
	border-radius 3px
	transition $ease
	cursor pointer
	
	
	&:hover
		background-color rgba($salmon, 0.5)
	
	&--info
		color lighten($text, 20)
		font-size 0.8em
		line-height 1.5
		transition $ease
		margin-bottom 2em
		
		
		p
			margin-bottom 1em
			
			a
				text-decoration none
				color $salmon
				transition $ease
				
				&:hover
					color darken($celedon, 20)
		
		+mq('bp-2')
			position absolute
			left 0
			top 0
			max-width 11em

.hidden
	height 0
	overflow-x hidden
	opacity 0
	
	+mq('bp-2')
		height 100%
		overflow-x visible
		transform translateX(-5em)