//========================
// Breakpoints
//========================
$mq_vars = {
    bp-1: '(min-width: 30em)'
    bp-2: '(min-width: 45em)'
    bp-3: '(min-width: 60em)'
}

//========================
// Type Scale
//========================
$root-size = 16px
$root-lh = 1.5

$type-scale = {
	tiny: 10px
	small: 12px
    base: $root-size
    medium: 18px
    large: 24px
    x-large: 52px
}

//========================
// Typefaces
//========================
$sans = Montserrat, Helvetica, Arial, sans-serif
$serif = Georgia, Times, serif

$regular = 400
$bold = 700

//========================
// Colors
//========================
$celedon = #D6E1C7
$teal = #45ADA8
$salmon = #FC9D9A
$steel = #547980
$eggshell = #FFFCF7
$text = #2D2C2A

//========================
// Misc
//========================
$ease = 0.2s ease-in-out all
