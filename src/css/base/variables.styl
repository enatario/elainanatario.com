//========================
// Breakpoints
//========================
$mq_vars = {
    bp-1: '(min-width: 30em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 60em)'
}

//========================
// Type Scale
//========================
$root-size = 16px
$root-lh = 1.5

$type-scale = {
    base: $root-size
    medium: 18px
    large: 24px
    x-large: 52px
}

//========================
// Typefaces
//========================
$sans = Montserrat, Helvetica, Arial, sans-serif
$serif = Georgia, Times, serif

$regular = 400
$bold = 700

//========================
// Misc
//========================
$ease = 0.2s ease all
