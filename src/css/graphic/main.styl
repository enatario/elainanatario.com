// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

$color1 = #c5dca0
$color2 = #EC98C1
$color3 = #59c3c3
$color4 = #EAD94C

body
	min-height 100vh
	overflow-x hidden
	background-color #FFFCF7
	box-shadow inset 0 20px 0 0 rgba($color1, 0.5), inset -20px 0 0 rgba($color2, 0.5), inset 0 -20px 0 0 rgba($color3, 0.5), inset 20px 0 0 rgba($color4, 0.5)