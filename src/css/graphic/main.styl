//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

$celery = #c5dca0
$marigold = #EC98C1
$salmon = #59c3c3
$teal = #EAD94C


gingham(width, color1, color2, color3, color4)
	box-shadow inset 0 width 0 0 rgba(color1, 0.5),
			   inset (-(width)) 0 0 rgba(color2, 0.5),
			   inset 0 (-(width)) 0 0 rgba(color3, 0.5),
			   inset width 0 0 rgba(color4, 0.5)

body
	min-height 100vh
	overflow-x hidden
	background-color #FFFCF7
	gingham(20px, $celery, $marigold, $salmon, $teal)